<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<suite name="ParametersSuite">

<parameter name="url" value="https://opensource-demo.orangehrmlive.com/"/>
<parameter name="username" value="Admin"/>
<parameter name="password" value="admin123"/>
<parameter name="sleepTime" value="3000"/>
	<test name="Testng using Parameters to Login">
	<parameter name="browsername" value="Edge"/>
		<classes>
			<class name="com.hyr.tests.ParametersSample">
				<methods>
					<include name="launchApp"></include>
					<include name="enterLoginCredentials"></include>
					<include name="verifyLogin"></include>
				</methods>
			</class>
		</classes>
	</test>
	<test name="Testng using Parameters to verifyMyInfo">
		<classes>
			<class name="com.hyr.tests.ParametersSample">
				<methods>
					<include name="launchApp"></include>
					<include name="enterLoginCredentials"></include>
					<include name="navigateToMyInfo"></include>
					<include name="verifyMyInfo"></include>
				</methods>
			</class>
		</classes>
	</test>
	<test name="VerifyGoogle" enabled = "false">
		<classes>
			<class name="com.hyr.tests.FirstTest">
				<methods>
					<include name="testGoogle"></include>
				</methods>
			</class>
		</classes>
	</test> 
</suite> 
